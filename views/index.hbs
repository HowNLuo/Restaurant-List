<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱..." aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- create restaurant & sort-->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto d-flex justify-content-between">
      <a href="/restaurants/new" class="btn btn-success">新增餐廳</a>
      <div class="d-flex flex-row">
        <span class="d-flex align-items-center  mr-1">排序方式：</span>
        <form action="/" class="d-flex flex-row">
          <select class="custom-select mr-3" id="inputGroupSelect01" name="sort">
            <option value="asc">A → Z</option>
            <option value="desc">Z → A</option>
          </select>
          <button type="submit" class="btn btn-dark">提交</button>
        </form>

      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>
            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>
          </div>
          <div class="d-flex justify-content-end">
            <a href="/restaurants/{{this._id}}" class="text-primary mr-3">詳細資料</a>
            <a href="/restaurants/{{this._id}}/edit" class="text-primary mr-3">編輯</a>
            <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display-inline">
              <button class="btn btn-danger " type="submit">刪除</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>